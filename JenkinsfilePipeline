pipeline {
    agent any
    stages {
    
	stage ('Build Servlet Project') {
            steps {
               sh  'mvn clean package'
            }

            post{
                success{
                    echo 'Now Archiving ....'

                    archiveArtifacts artifacts : '**/*.war'
                }
            }
			}
    
    stage ('deploy Servlet Project') {
        steps {
sshagent(['tomcat-sshagent']) {
    sh 'scp -o StrictHostKeyChecking=no target/*.war ec2-user@172.31.23.92:/root/tomcat8/webapps'
}
}
}
}
}
